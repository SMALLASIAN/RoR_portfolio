<%= stylesheet_link_tag "blog", "data-turbo-track": "reload" %>

<%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :name, input_html: { class: 'input is-warning' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.input :comment, input_html: { class: 'textarea is-warning' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>
    <%= f.button :submit, class: "button is-primary is-outlined" %>
<% end %>    