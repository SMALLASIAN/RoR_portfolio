<%= stylesheet_link_tag "blog", "data-turbo-track": "reload" %>

<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p>
                    <%= comment.name %>:
                    <%= comment.comment %>
                </p>
            </div>
        </div>

        <%= button_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger", data: { confirm: "Are you sure?" } %>
    </article>
</div>