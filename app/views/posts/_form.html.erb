<div class="section">
<%= simple_form_for @post do |f| %>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: 'input is-warning' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>

    <div class="field">
        <div class="control">
            <%= f.input :content, input_html: { class: 'textarea is-warning' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>
    <%= f.button :submit, class: "button is-primary is-outlined" %>
<% end %>
</div>